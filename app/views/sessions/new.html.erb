<%= render '/shared/title', title: 'Log In'%>
	<hr>
	<div class="well col-md-8 col-md-offset-1">
   <%= form_tag '/login' do |f| %>
		<div class="form-group">
			<%= label_tag :name %>
			<br>
			<%= text_field_tag :name, params[:name],class:"col-md-12" %>
	  </div><br>
		<div class="form-group">
 			<%= label_tag :password %>
 			<br>
 			<%= password_field_tag :password, params[:password],class:"col-md-12" %>
 		</div>
 		<br>
 		<%= submit_tag "Login", class: "btn btn-primary" %>
 		<% end %>
 	</div> 
