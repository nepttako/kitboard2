<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
<div class="col-md-12">
  <div class="field">

    <%= f.label :title %><br>
    <%= f.text_field :title, class:"col-md-12" %>
    <%= f.label :content %><br>
    <%= f.text_area :content, rows:10, class:"col-md-12" %>
    Category: 
    <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |c| %>
    <%= c.label(class:"checkbox_inline"){c.check_box(class:"checkbox")} + c.text %>
    <% end %>
  </div>


  <div class="actions">
  <button class="btn btn-primary" type="submit">
   Submit </button>
   <% f.submit %>
  </div>
</div>
</div>

<% end %>
